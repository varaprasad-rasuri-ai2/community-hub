datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  time        String?
  location    String
  category    String?
  coverImage  String?
  createdAt   DateTime @default(now())
  media       Media[]
}

model Media {
  id        String   @id @default(uuid())
  url       String
  type      MediaType
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(now())
}

enum MediaType {
  image
  video
}

model Announcement {
  id        String   @id @default(uuid())
  title     String
  message   String
  createdAt DateTime @default(now())
}
